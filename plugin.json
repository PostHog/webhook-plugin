{
    "name": "Webhook",
    "url": "https://github.com/PostHog/new-webhook-plugin",
    "description": "Send a webhook",
    "main": "index.ts",
    "config": [
        {
            "key": "url",
            "name": "What is the webhook destination URL?",
            "type": "string",
            "hint": "e.g. https://webhooks.example.com/1234",
            "default": "",
            "required": true
        },
        {
            "key": "headers",
            "name": "Headers",
            "type": "dictionary",
            "required": false,
            "secret": true,
            "hint": "Headers to be include in the request. `Authorization` header is treated specially and will be base64 encoded if specified as `Basic user:password`."
        },
        {
            "key": "method",
            "name": "HTTP Method",
            "type": "choice",
            "default": "POST",
            "choices": ["POST", "GET", "PUT", "DELETE", "PATCH"],
            "required": true
        },
        {
            "key": "payload",
            "hint": "You can use {{ }} templates to add information from the event to the payload.",
            "default": "{\n   \"event\": \"{{event}}\"\n}",
            "name": "JSON Payload",
            "type": "json",
            "required": true
        }
    ]
}
